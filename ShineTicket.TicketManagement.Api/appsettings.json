{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ShineTicketTicketManagementConnectionString": "Server=(localdb)\\MSSQLLocalDB;Database=ShineTicketTicketManagementDb;Trusted_Connection=True;"
  },
  "EmailSettings": {
    "FromAddress": "eng.abdalrhmn.h@gmail.com",
    "FromName": "Abdalrhmn"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "@mt = 'An unhandled exception has occurred while executing the request.'" }
      }
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "ApiUrl": "https://localhost:7020",
  "BlazorUrl": "https://localhost:7080"
}
